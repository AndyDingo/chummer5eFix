<?xml version="1.0" encoding="utf-8" ?>
<!-- Rigger 5 Weapon Mounts - Allow Sporting Rifles
     R5 excludes Sporting Rifles from the list of accessible weapon mounts. This customdata adds that weapon category to the Standard and Heavy weapon mounts. -->
<chummer>
  <mods>
    <!--Heavy Weapon Mount (R5)-->
    <mod>
      <id>4eecb2ee-ad33-4bc2-b8b3-d35e0df40836</id>
      <weaponmountcategories amendoperation="append">,Sporting Rifles</weaponmountcategories>
    </mod>
    <!--Standard Weapon Mount (R5)-->
    <mod>
      <id>86741661-11c2-4781-b365-b02dbb9fd7c0</id>
      <weaponmountcategories amendoperation="append">,Sporting Rifles</weaponmountcategories>
    </mod>
  </mods>
  <weaponmounts>
    <!--Standard Weapon Mount (R5)-->
    <weaponmount>
      <id>4e9da56b-622c-439f-9718-98ac3a792351</id>
      <weaponcategories amendoperation="append">,Sporting Rifles</weaponcategories>
    </weaponmount>
    <!--Heavy Weapon Mount (R5)-->
    <mod>
      <id>73f6f721-9732-4773-8ce6-0e3f5222a49f</id>
      <weaponcategories amendoperation="append">,Sporting Rifles</weaponcategories>
    </mod>
  </weaponmounts>
</chummer>
