<?xml version="1.0" encoding="utf-8" ?>
<chummer>
  <metatypes>
    <metatype xpathfilter="starts-with(name, 'Shapeshifter')">
      <metavariants>
        <metavariant xpathfilter="bonus[contains(initiativedice, '1')]">
          <bonus>
            <initiativedice amendoperation="remove" />
            <initiativepass amendoperation="remove" />
          </bonus>
        </metavariant>
        <metavariant xpathfilter="bonus[contains(initiativedice, '2')]">
          <initiativedice>2</initiativedice>
          <bonus xpathfilter="contains(initiativedice, '2')">
            <initiativedice amendoperation="remove" />
            <initiativepass amendoperation="remove" />
          </bonus>
        </metavariant>
        <metavariant xpathfilter="bonus[contains(initiativedice, '3')]">
          <initiativedice>3</initiativedice>
          <bonus xpathfilter="contains(initiativedice, '3')">
            <initiativedice amendoperation="remove" />
            <initiativepass amendoperation="remove" />
          </bonus>
        </metavariant>
      </metavariants>
    </metatype>
  </metatypes>
</chummer>
